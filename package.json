{
  "name": "nestjs-graphql-microservices-nx-repo-starter",
  "version": "0.0.1",
  "description": "NestJS GraphQL Microservices NX Repo Starter",
  "license": "MIT",
  "scripts": {
    "project:init": "./scripts/init-project.sh",
    "project:reset": "./scripts/reset-project.sh",
    "prebuild": "./scripts/codegen-if-needed.sh",
    "build": "nx run-many --target=build --all",
    "start:gateway": "nx serve api-gateway",
    "start:users": "nx serve users-service",
    "start:products": "nx serve products-service",
    "start:all": "nx run-many --target=serve --all --parallel",
    "predev": "./scripts/codegen-if-needed.sh",
    "dev": "concurrently \"pnpm start:users\" \"pnpm start:products\" \"sleep 5 && pnpm start:gateway\"",
    "dev:init": "concurrently \"pnpm start:users\" \"pnpm start:products\" \"sleep 5 && pnpm start:gateway\" \"sleep 10 && pnpm codegen\"",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "lint:markdown": "markdownlint-cli2 '**/*.md'",
    "prisma:generate:users": "dotenv -e apps/users-service/.env -- prisma generate --schema=apps/users-service/prisma/schema.prisma",
    "prisma:generate:products": "dotenv -e apps/products-service/.env -- prisma generate --schema=apps/products-service/prisma/schema.prisma",
    "prisma:migrate:users": "dotenv -e apps/users-service/.env -- prisma migrate dev --schema=apps/users-service/prisma/schema.prisma",
    "prisma:migrate:products": "dotenv -e apps/products-service/.env -- prisma migrate dev --schema=apps/products-service/prisma/schema.prisma",
    "prisma:seed:users": "cd apps/users-service && dotenv -e .env -- ts-node --project tsconfig.seed.json prisma/seed.ts",
    "prisma:seed:products": "cd apps/products-service && dotenv -e .env -- ts-node --project tsconfig.seed.json prisma/seed.ts",
    "prisma:seed:all": "npm run prisma:seed:users && npm run prisma:seed:products",
    "prisma:studio:users": "dotenv -e apps/users-service/.env -- prisma studio --schema=apps/users-service/prisma/schema.prisma --port 5555",
    "prisma:studio:products": "dotenv -e apps/products-service/.env -- prisma studio --schema=apps/products-service/prisma/schema.prisma --port 5556",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "prepare": "husky",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "dev:watch": "concurrently \"pnpm codegen:watch\" \"pnpm dev\"",
    "docs:generate": "node scripts/generate-docs-html.js",
    "docs:serve": "npx serve docs"
  },
  "private": true,
  "dependencies": {
    "@apollo/gateway": "^2.10.0",
    "@apollo/server": "^4.11.3",
    "@apollo/subgraph": "^2.10.0",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/common": "^10.4.10",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.10",
    "@nestjs/graphql": "^12.2.1",
    "@nestjs/microservices": "^10.4.10",
    "@nestjs/platform-express": "^10.4.10",
    "@prisma/client": "^5.22.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.10",
    "@nx/devkit": "21.2.2",
    "@nx/eslint-plugin": "21.2.2",
    "@nx/jest": "21.2.2",
    "@nx/js": "21.2.2",
    "@nx/nest": "^21.2.2",
    "@nx/node": "^21.2.2",
    "@nx/webpack": "^21.2.2",
    "@nx/workspace": "21.2.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.11",
    "@typescript-eslint/eslint-plugin": "^8.18.3",
    "@typescript-eslint/parser": "^8.18.3",
    "concurrently": "^9.1.0",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.2.2",
    "highlight.js": "^11.11.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^16.1.2",
    "markdownlint-cli2": "^0.18.1",
    "marked": "^16.0.0",
    "nx": "21.2.2",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "~5.8.2"
  }
}
